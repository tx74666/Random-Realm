<Window x:Class="Product1.Ambition"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Product1"
        mc:Ignorable="d"
        WindowStyle="None" ResizeMode="NoResize" Background="Transparent"
        Title="Ambition" Height="500" Width="800" AllowsTransparency="True"
        PreviewMouseLeftButtonDown="Window_PreviewMouseLeftButtonDown"
        PreviewMouseMove="Window_PreviewMouseMove"
        PreviewMouseLeftButtonUp="Window_PreviewMouseLeftButtonUp">
    <Grid>
        <Border Background="White" CornerRadius="50" BorderThickness="5"
             BorderBrush="Gray" Padding="20" >
            <Border Margin="600 10 10 350" Background="Orange" CornerRadius="20">
                <Button Click="Button_Click" Content="Exit" FontSize="50" Background="Transparent" BorderThickness="0"/>
            </Border>
        </Border>
          

    </Grid>
</Window>
