<Window x:Class="Product1.Politics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Product1"
        mc:Ignorable="d"
        Title="Politics" Height="450" Width="800" SizeToContent="WidthAndHeight">
    <Grid>
        <Border Margin="20,20,640,340" Background="LightBlue" CornerRadius="20">
            <Button Click="USA_Click"  Background="Transparent" Name="USA" FontSize="50" Content="USA"/>
        </Border>
        <Border Margin="20,100,640,250" Background="Red" CornerRadius="20">
            <Button Click="China_Click"  Background="Transparent" Name="China" FontSize="50" Content="China"/>
        </Border>


    </Grid>
</Window>
