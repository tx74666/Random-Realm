<Window x:Class="Product1.Society"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Product1"
        mc:Ignorable="d" Background="Transparent" AllowsTransparency="True"
        Title="Society" Height="450" Width="800" WindowStyle="None" 
        PreviewMouseLeftButtonDown="Window_PreviewMouseLeftButtonDown"
        PreviewMouseMove="Window_PreviewMouseMove"
        PreviewMouseLeftButtonUp="Window_PreviewMouseLeftButtonUp">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="White" Offset="1"/>
                <GradientStop Color="OrangeRed" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock FontSize="35" Foreground="LightGreen">
          <Run Text="知己知彼，百战不殆"/>
          <LineBreak/>
          <Run Text="赚富人的钱很容易，骗富人的钱很难;&#x0a;而赚穷人的钱很难，骗穷人的钱很简单。"/>
       </TextBlock>
        <Border HorizontalAlignment="Right" VerticalAlignment="Top" Background="#FF306F04" Margin="0,10,10,0" Width="100" Height="80" CornerRadius="20">
            <Button Click="Button_Click" Content="Exit" FontSize="40" Background="Transparent"/>
            
        </Border>
        
    </Grid>
</Window>
